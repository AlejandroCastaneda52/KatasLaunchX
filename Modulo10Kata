    "def Agua3(astronautas,agua,dias):\n",
    "    for argumento in [astronautas,agua,dias]:\n",
    "        try:\n",
    "            argumento/10\n",
    "        except TypeError:\n",
    "            raise TypeError(\"Todos los argumentos deben de ser tipo int, pero se recibieron %a\" %(argumento))\n",
    "    uso_diario = astronautas * 11\n",
    "    total_usado = uso_diario * dias\n",
    "    suministro_agua = agua - total_usado\n",
    "    if suministro_agua < 0:\n",
    "        raise RuntimeError(\"No hay suficioente agua para %i astronautas despues de %i días\" %(astronautas,dias))\n",
    "    print(\"Lo que queda de agua después de %i dias son: %i litros\" %(dias,suministro_agua))\n",
